{
    "extends": "Merge.sublime-theme",
    "variables":
    {
        "white": "hsl(0, 0%, 95%)",
        "text-heading": "var(white)",
        "text": "color(var(white) a(- 30%))",
        "text-light": "color(var(text) a(- 40%))",
        "darken": "hsl(0, 0%, 13%)",

        "red": "var(--redish)",
        "orange": "var(--orangish)",
        "yellow": "var(--yellowish)",
        "green": "var(--greenish)",
        "cyan": "var(--cyanish)",
        "blue": "var(--bluish)",
        "pink": "var(--pinkish)",
        "purple": "var(--purplish)",

        // Alias for pink
        "magenta": "var(pink)",
        "dark_red": "color(var(red) s(25%) l(35%))",
        "dark_blue": "color(var(blue) s(25%) l(35%))",

        "medium_gray-light": "color(var(--background) l(48%))",
        "medium_gray": "color(var(--background) l(58%))",
        "medium_gray-dark": "color(var(--background) l(38%))",
        "dark_gray-lightest": "color(var(--background) s(20%) l(27%))",
        "dark_gray-light": "color(var(--background) s(20%) l(22%))",
        "dark_gray": "color(var(--background) s(20%) l(15%))",
        "dark_gray-dark": "color(var(--background) l(10%))",
        "dark_gray-darkest": "color(var(--background) s(18%) l(5%))",

        // Labels
        "label_color": "var(text-heading)",
        "help_label_color": "color(var(text-heading) a(0.6))",

        // Header
        "title_bar_style": "dark",
        "header_bg": "var(dark_gray-dark)",
        "header_fg": "var(text-heading)",
        "header_button_bg": "color(var(--background) l(25%))",
        "icon_button_fg": "white",

        "info_shadow": "color(black a(0.2))",

        "diverged_bg": "color(var(orange) l(- 5%) s(- 20%))",
        "diverged_button_bg": "var(button_bg)",
        "diverged_button_fg": "var(--background)",

        // Scroll shadow
        "scroll_shadow": "color(black a(0.3))",

        // Focus highlight
        "focus_highlight_color": "var(text)",

        // Welcome overlay
        "welcome_bg": "var(dark_gray-light)",
        "recent_repositories_row_bg-hover": "color(var(dark_gray-light) l(+ 10%))",

        // Preferences Page
        "preferences_overlay_bg": "var(dark_gray-dark)",
        "preferences_section_table_bg": "var(dark_gray-light)",

        // Side bar
        "location_bar_fg": "var(text)",
        "location_bar_heading_fg": "var(text-heading)",
        "location_bar_heading_shadow": "black",
        "location_bar_row_bg-hover": "color(var(dark_gray-lightest) l(+ 5%))",
        "disclosure_fg": "var(text)",

        // Commit list
        "commit_list_bg": "var(dark_gray-light)",
        "commit_row_bg-hover": "color(var(dark_gray-light) l(+ 10%))",
        "commit_summary_fg-primary": "var(text-heading)",
        "commit_summary_fg-secondary": "var(text-light)",
        "commit_color_count": 8,

        "commit_edge_0": "var(cyan)",
        "commit_edge_1": "var(purple)",
        "commit_edge_2": "var(pink)",
        "commit_edge_3": "var(orange)",
        "commit_edge_4": "var(yellow)",
        "commit_edge_5": "var(green)",
        "commit_edge_6": "var(red)",
        "commit_edge_7": "var(blue)",

        // Annotations
        "commit_annotation_fg": "var(text)",
        "commit_annotation_fg_inverted": "var(--background)",
        "commit_annotation_bg": "color(white a(20%))",

        "commit_annotation_fg_0_border": "var(commit_edge_0)",
        "commit_annotation_fg_1_border": "var(commit_edge_1)",
        "commit_annotation_fg_2_border": "var(commit_edge_2)",
        "commit_annotation_fg_3_border": "var(commit_edge_3)",
        "commit_annotation_fg_4_border": "var(commit_edge_4)",
        "commit_annotation_fg_5_border": "var(commit_edge_5)",
        "commit_annotation_fg_6_border": "var(commit_edge_6)",
        "commit_annotation_fg_7_border": "var(commit_edge_7)",


        "commit_annotation_bg_inverted_0": "color(var(commit_edge_0))",
        "commit_annotation_bg_inverted_1": "color(var(commit_edge_1))",
        "commit_annotation_bg_inverted_2": "color(var(commit_edge_2))",
        "commit_annotation_bg_inverted_3": "color(var(commit_edge_3))",
        "commit_annotation_bg_inverted_4": "color(var(commit_edge_4))",
        "commit_annotation_bg_inverted_5": "color(var(commit_edge_5))",
        "commit_annotation_bg_inverted_6": "color(var(commit_edge_6))",
        "commit_annotation_bg_inverted_7": "color(var(commit_edge_7))",

        // Location Bar
        "side_bar_container_bg": "var(dark_gray-lightest)",

        // Table of Contents
        "table_of_contents_bg": "var(dark_gray)",
        "table_of_contents_fg": "var(text)",
        "table_of_contents_heading_fg": "var(text-heading)",
        "table_of_contents_row_bg": "color(var(dark_gray) l(+ 30%))",

        // Detail panel
        "detail_panel_bg": "var(--background)",
        "field_name_fg": "var(text)",
        "author_fg": "color(var(white) a(0.4))",
        "terminator_fg": "var(medium_gray)",

        "remote_ann_fg": "color(var(--background) a(0.7))",
        "remote_ann_bg": "var(green)",

        "stash_ann_fg": "var(text)",
        "stash_ann_bg": "color(var(white) a(20%))",
        "stash_ann_border": "color(var(white) a(50%))",

        "tag_ann_fg": "var(--background)",
        "tag_ann_bg": "var(yellow)",
        "tag_ann_opacity": 0.4,

        "file_ann_fg": "var(text)",
        "file_ann_bg": "color(var(white) a(0.2))",

        "submodule_ann_fg": "var(text)",
        "submodule_ann_bg": "color(var(white) a(20%))",
        "submodule_light_ann_fg": "var(text)",
        "submodule_light_ann_bg": "color(var(white) a(20%))",

        "inserted_ann_bg": "color(var(pink) blend(var(darken) 35%))",
        "deleted_ann_bg": "color(var(green) blend(var(darken) 35%))",

        // Diff headers
        "file_diff_shadow": "color(black a(0.5))",
        "file_icon_bg": "color(var(text) a(0.2))",

        "hunk_button_fg": "white",
        "hunk_button_shadow": "color(black a(0.5))",

        "file_header_bg": "var(dark_gray-light)",
        "file_header_bg-hover": "color(var(dark_gray-light) l(+ 3%))",

        "hunk_header_bg": "var(dark_gray-lightest)",

        "deleted_icon_fg": "var(text)",
        "deleted_header_bg": "var(dark_red)",
        "deleted_header_bg-hover": "color(var(dark_red) l(+ 5%))",

        "unmerged_icon_fg": "var(text)",
        "unmerged_header_bg": "var(dark_blue)",
        "unmerged_header_bg-hover": "color(var(dark_blue) l(+ 3%))",

        "recent_icon_fg": "var(yellow)",
        "recent_icon_bg": "transparent",
        "untracked_header_bg": "color(var(--background) s(- 10%) l(20%))",
        "untracked_header_bg-hover": "color(var(untracked_header_bg) l(+ 3%))",

        "full_context_icon_bg": "var(text)",

        "staged_icon_fg": "var(text)",

        "renamed_file_inserted": "color(var(green) s(30%) l(60%))",
        "renamed_file_deleted": "color(var(red) s(50%) l(65%))",

        // Blame
        "blame_popup_bg": "color(var(--background) l(+ 10%))",

        // Buttons
        "button_bg": "color(var(white) a(20%))",
        "button_fg": "var(label_color)",
        "button_shadow": "color(black a(0.5))",

        "highlighted_button_light_bg": "color(hsl(84, 35%, 50%))",
        "highlighted_button_light_fg": "var(label_color)",
        "highlighted_button_dark_bg": "color(hsl(83, 40%, 44%))",
        "highlighted_button_dark_fg": "var(label_color)",
        "highlighted_button_shadow": "color(black a(0.5) l(+ 10%))",

        "toggle_button_bg": "color(var(white) a(20%))", // This matches the header hover buttons
        "toggle_button_fg": "var(text)",
        "toggle_button_fg_selected": "var(text-heading)",

        // Tabs
        "tab_bar_bg": "var(dark_gray-dark)",
        "tab_separator_bg": "var(dark_gray-lightest)",

        // Radio buttons
        "radio_back": "var(--background)",
        "radio_selected": "var(--accent)",
        "radio_border-selected": "var(--accent)",

        // Checkbox buttons
        "checkbox_back": "var(--background)",
        "checkbox_selected": "var(--accent)",
        "checkbox_border-selected": "var(--accent)",

        // Dialogs
        "dialog_bg": "var(dark_gray-dark)",
        "dialog_button_bg": "color(var(white) a(20%))",

        // Progress bar
        "progress_bg": "var(dark_gray-lightest)",
        "progress_fg": "color(var(medium_gray) a(0.5))",

        // Quick panel
        "quick_panel_bg": "var(--background)",
        "quick_panel_row_bg": "color(var(white) a(10%))",
        "quick_panel_fg": "var(text)",
        "quick_panel_fg-match": "var(--accent)",
        "quick_panel_fg-selected": "var(text)",
        "quick_panel_fg-selected-match": "var(--accent)",
        "quick_panel_path_fg": "var(text-light)",
        "quick_panel_path_fg-match": "var(--accent)",
