        "image_diff_checkerboard_alt_bg": "color(var(--background) l(+ 10%))",
        "image_metadata_label_bg": "color(var(white) a(20%))",

        // Switch repository window
        "switch_repo_bg": "var(dark_gray-light)",

        // Hints
        "failed_label_fg": "var(--background)",

        // Loading
        "loading_ball_1": "var(pink)",
        "loading_ball_2": "var(green)",

        // Command Palette
        "preview_fg": "white",

        // Merge Helper
        "merge_helper_highlight_bg": "var(dark_gray-lightest)",
        "console_border": "var(dark_gray-light)",

        // Tabs
        "repository_tab_bar_bg": "var(dark_gray-dark)",
        "repository_tab_bar_border_bg": "var(dark_gray-lightest)",

        "file_badge_created_fg": "var(green)",
        "file_badge_deleted_fg": "var(pink)",
        "file_badge_modified_fg": "var(orange)",
        "file_badge_modified_bg": "color(var(white) a(20%))",
        "file_badge_unmerged_fg": "var(cyan)",
        "file_badge_unmerged_bg": "color(var(white) a(20%))",
        "file_badge_untracked_fg": "var(purple)",
        "file_badge_untracked_bg": "color(var(white) a(20%))",
        "file_badge_staged_fg": "var(green)",
        "file_badge_staged_bg": "color(var(white) a(20%))",
